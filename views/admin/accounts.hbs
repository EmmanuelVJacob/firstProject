<section>
  <div class="container">
      <div class="row">
    <form
      class="contact_form d-flex align-items-center"
      action="/admin/searchUser"
      method="post"
      novalidate="novalidate"
    >
      <input
        class="form-control mt-4"
        name="name"
        type="text"
        placeholder="search"
      />

      <button type="submit" class="btn btn-primary bg-warning rounded">
        search
      </button>

    </form>
  </div>
  <div class="row">
    <div class="row mt-4">
      <a href="/admin/addUser" class="btn btn-success ml-auto">
        add user</a>

    </div>
    <table class="table mt-5">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">email</th>
          <th scope="col">Phone number</th>
          <th scope="col">delete</th>
          <th scope="col">status</th>
          {{! <th scope="col">image</th> }}

        </tr>
      </thead>
      <tbody>
        {{#each userData}}
          <tr class="bg-white">
            <td>{{this.name}}</td>
            <td >{{this.email}}</td>
            <td >{{this.mobile}}</td>
            <td ><a
                class="btn btn-danger"
                href="/admin/deleteUser/{{this._id}}"
                onclick="return confirm('are you sure you want to delete {{this.name}}')"
              >
                <i class="far fa-trash-alt tm-product-delete-icon"></i>
              </a></td>
              
                <td>
                  <a href="/admin/Block/{{this._id}}">
                    {{#if status}}
                  <i class="fas fa-toggle-on text-success"></i>
                  {{else}}
                 <a href="/admin/UnBlock/{{this._id}}">
                  <i class="fas fa-toggle-off text-danger"></i></a>
                  {{/if}}
                
                
                </td>

          </tr>





        {{/each}}
      </tbody>
    </table>
  </div>
</section>