<div class="container">
  <div class="row tm-content-row tm-mt-big">
    <div class="col-xl-12 col-lg-12 tm-md-12 tm-sm-12 tm-block-col">
      <div class="bg-white tm-block h-100">
        <div class="row">

          <div class="col-md-8 col-sm-12">
            <h2 class="tm-block-title d-inline-block">Category</h2>
          </div>

           <button
      type="button"
      class="btn btn-primary mt-3 bg-warning rounded"
      data-toggle="modal"
      data-target="#exampleModal"
    >
      add new category
    </button>
 {{#if errMsg}}
                  <div id="msg" class="alert alert-danger ml-4">{{errMsg}}</div>
                {{/if}}
    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">add category</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="text-center mt-4 nameSignup">

              <form
                action="/admin/addProductCategory"
                method="post"
                class="p-3 mt-3"
              >
                <div class="form-field">
                  <input
                    type="text"
                    name="category"
                    id="fullName"
                    placeholder="category"
                    required
                  />
                </div>
               

                <button type="submit" class="btn mt-3">add category</button>
              </form>
            </div>
          </div>
        </div>
      </div>
        </div>
      
        <div class="table-responsive">
                  
          <table
            class="table table-hover table-striped tm-table-striped-even mt-3"
            id="productsTable"
          >
            <thead>
              <tr class="tm-bg-gray">
                <th scope="col">Category Name</th>
                <th scope="col">Delete Category </th>
              </tr>
            </thead>

            <tbody>
              {{#each category}}
              {{#if listed}}
                <tr>
                  <td>{{this.category}}</td>
                  <td><a
                      class="btn btn-outline-success"
                      data-toggle="modal"
                      data-target="#delete{{this._id}}"
                    ><i class="fas fa-trash-alt tm-trash-icon"></i></a></td>
                </tr>
                {{else}}
                <tr>
                  <td class="text-danger">{{this.category}}</td>
                   <td><a
                      class="btn btn-outline-danger"
                      data-toggle="modal"
                      data-target="#listed{{this._id}}"
                    ><i class="fas fa-undo-alt text-danger"></i></a></td>
                
                </tr>
                {{/if}}
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


{{! Delete Modal }}
{{#each category}}
  <div
    class="modal fade"
    id="delete{{this._id}}"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Do you want to delete Category
          <b class="text-dark">{{this.category}}</b>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >cancel</button>
          <a
            href="/admin/deleteProductCategory/{{this._id}}"
            type="button"
            class="btn btn-danger"
          >delete</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}




{{! Delete Modal }}
{{#each category}}
  <div
    class="modal fade"
    id="listed{{this._id}}"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">listed confirmation</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Do you want to list Category
          <b class="text-dark">{{this.category}}</b>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >cancel</button>
          <a
            href="/admin/listCategory/{{this._id}}"
            type="button"
            class="btn btn-success"
          >list</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}

<script>
  $(function () { $('#productsTable').DataTable(); });

</script>